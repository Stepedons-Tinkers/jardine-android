<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Row 1 with 1 columns -->

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000b6"
            android:gravity="center"
            android:padding="14dip"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/general_info"
            android:textColor="#fff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/edit_activity"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:text="@string/edit_activity" />
        </RelativeLayout>
    </TableRow>

    <!-- Row 2 with 2 columns -->

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0000b6"
        android:orientation="horizontal" >

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_weight="0.3"
            android:background="#ffffff" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="14dip"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/crm_no"
                android:textColor="#000000"
                android:textStyle="bold" />
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="0.3"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/crm_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="14dip"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="alphanumeric; link to Workplan Entry "
                android:textColor="#000000" />
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="0.3"
            android:background="#ffffff" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="14dip"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/activity_type"
                android:textColor="#000000"
                android:textStyle="bold" />
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_weight="0.3"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/activity_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="14dip"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="alphanumeric; link to Workplan Entry "
                android:textColor="#000000" />
        </HorizontalScrollView>
    </TableRow>

