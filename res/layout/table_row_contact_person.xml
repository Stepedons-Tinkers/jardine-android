<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical" >
    
    <TableRow
        android:id="@+id/trContactPersonRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/tvContactPersonCRMNo"
	        android:layout_width="match_parent"
	        android:layout_column="0"
	        android:layout_weight="1"
	        android:ellipsize="end"
	        android:gravity="center"
	        android:maxLines="1"
	        android:paddingLeft="2dp"
	        android:text="@string/contact_person_crm_no"
	        android:textColor="@color/black"
	        android:textSize="21sp" />
	    
	    <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:background="@color/black" />
	
	    <TextView
	        android:id="@+id/tvContactPersonFirstName"
	        android:layout_width="match_parent"
	        android:layout_column="0"
	        android:layout_weight="1"
	        android:ellipsize="end"
	        android:gravity="center"
	        android:maxLines="1"
	        android:paddingLeft="2dp"
	        android:text="@string/contact_person_firstname"
	        android:textColor="@color/black"
	        android:textSize="21sp" />
	    
	    <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:background="@color/black" />
	    
	    <TextView
	        android:id="@+id/tvContactPersonLastName"
	        android:layout_width="match_parent"
	        android:layout_column="0"
	        android:layout_weight="1"
	        android:ellipsize="end"
	        android:gravity="center"
	        android:maxLines="1"
	        android:paddingLeft="2dp"
	        android:text="@string/contact_person_lastname"
	        android:textColor="@color/black"
	        android:textSize="21sp" />
	    
	    <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:background="@color/black" />
	    
	    <TextView
	        android:id="@+id/tvContactPersonPosition"
	        android:layout_width="match_parent"
	        android:layout_column="0"
	        android:layout_weight="1"
	        android:ellipsize="end"
	        android:gravity="center"
	        android:maxLines="1"
	        android:paddingLeft="2dp"
	        android:text="@string/contact_person_position"
	        android:textColor="@color/black"
	        android:textSize="21sp" />
	    
	    <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:background="@color/black" />
	    
	    <TextView
	        android:id="@+id/tvContactPersonMobileNo"
	        android:layout_width="match_parent"
	        android:layout_column="0"
	        android:layout_weight="1"
	        android:ellipsize="end"
	        android:gravity="center"
	        android:maxLines="1"
	        android:paddingLeft="2dp"
	        android:text="@string/contact_person_mobileno"
	        android:textColor="@color/black"
	        android:textSize="21sp" />
	    
	    <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:background="@color/black" />
	</TableRow>
</LinearLayout>
