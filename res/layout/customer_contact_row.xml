<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/trCustomerContactRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvCustomerContactCol1"
            android:layout_width="180dp"
            android:layout_column="0"
            android:layout_weight="1"
           
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="2dp"
            android:text="@string/crm_no_contact_person"
            android:textColor="@color/black"
            android:textSize="21sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tvCustomerContactCol2"
            android:layout_width="180dp"
            android:layout_column="1"
            android:layout_weight="1"
          
             android:gravity="center"
            android:maxLines="1"
            android:text="@string/firstname_contact_person"
            android:textColor="@color/black"
            android:textSize="21sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tvCustomerContactCol3"
            android:layout_width="185dp"
            android:layout_column="2"
            android:layout_weight="1"
           
             android:gravity="center"
            android:maxLines="1"
            android:text="@string/lastname_contact_person"
            android:textColor="@color/black"
            android:textSize="21sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tvCustomerContactCol4"
            android:layout_width="180dp"
            android:layout_column="2"
            android:layout_weight="1"
             android:gravity="center"
            
            android:maxLines="1"
            android:text="@string/position_contact_person"
            android:textColor="@color/black"
            android:textSize="21sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tvCustomerContactCol5"
            android:layout_width="180dp"
            android:layout_column="2"
            android:layout_weight="1"
            android:maxLines="1"
         
             android:gravity="center"
            android:text="@string/mobile_no_contact_person"
            android:textColor="@color/black"
            android:textSize="21sp" />
    </TableRow>

</LinearLayout>