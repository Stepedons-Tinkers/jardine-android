<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/trCollateralsMMRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvCollateralsMMCrmNo"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="5dp"
            android:text="@string/collaterals_file_title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_xxlarge" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tvCollateralsMMDescription"
            android:layout_width="match_parent"
            android:layout_column="1"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="5dp"
            android:text="@string/collaterals_filename"
            android:textColor="@color/black"
            android:textSize="@dimen/text_xxlarge" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:background="@color/black" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_column="2"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tvCollateralsMMIsActive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="5dp"
                android:text="@string/collaterals_file_modified_time"
                android:textColor="@color/black"
                android:textSize="@dimen/text_xxlarge" />

            <ImageView
                android:id="@+id/ivCollateralsMMNewIndicator"
                android:layout_width="@dimen/text_xxxxlarge"
                android:layout_height="@dimen/text_xxxxlarge"
                android:layout_gravity="center|end"
                android:background="@null"
                android:src="@drawable/collaterals_new"
                android:visibility="gone" />
        </FrameLayout>
    </TableRow>

</LinearLayout>