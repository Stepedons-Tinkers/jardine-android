<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/activity_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="-8dp"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/back_to_activity"
            android:textSize="14sp" />

        <Button
            android:id="@+id/jdi_stock_check"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-9dp"
            android:layout_marginTop="-8dp"
            android:layout_weight="3.74"
            android:inputType="text|textCapCharacters"
            android:onClick="jdiStockCheck"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/all_caps_add_competitor_product_stock_check"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="true"
        android:overScrollMode="always"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="none" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:shrinkColumns="*"
            android:stretchColumns="*" >

            <!-- Row 1 with 1 columns -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#0000b6"
                    android:gravity="center"
                    android:padding="14dip"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/general_info"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/edit_activity"
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_toLeftOf="@+id/edit_activity"
                        android:text="@string/cancel" />

                    <Button
                        android:id="@+id/edit_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:onClick="createJDIProductStockCheck"
                        android:text="@string/create" />
                </RelativeLayout>
            </TableRow>

            <!-- Row 2 with 2 columns -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0000b6"
                android:orientation="horizontal" >

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0.3"
                    android:background="#b0b0b0" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="14dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/crm_no_competitor_stock_check"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0.3"
                    android:background="#b0b0b0" >

                    <TextView
                        android:id="@+id/crm_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="14dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="incremental; auto-generated"
                        android:textColor="#000"
                        android:textSize="14dp" />
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0.3"
                    android:background="#b0b0b0" >

                    <TextView
                        android:id="@+id/customer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="14dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:state_selected="true"
                        android:text="@string/activity_competitor_stock_check"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <requestFocus
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0.3"
                    android:background="#b0b0b0" >

                    <TextView
                        android:id="@+id/customer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="14dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:state_selected="true"
                        android:text="related Activity record"
                        android:textColor="#FF00"
                        android:textSize="14dp" />

                    <requestFocus
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </HorizontalScrollView>
            </TableRow>

            <!-- Row 2 with 2 columns -->

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0000b6"
                android:orientation="horizontal" >

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.3"
                    android:background="#dcdcdc" >

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#dcdcdc"
                        android:gravity="center"
                        android:padding="14dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/competitor_product"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="#dcdcdc" >

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#dcdcdc"
                        android:gravity="center"
                        android:padding="14dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="related Product record"
                        android:textColor="#000000" />
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="#dcdcdc" >

                    <TextView
                        android:id="@+id/TextView05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#dcdcdc"
                        android:gravity="center"
                        android:padding="14dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/stock_status_competitor_product"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.3"
                    android:background="#dcdcdc" >

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:background="#dcdcdc"
                        android:scrollHorizontally="true" />
                </HorizontalScrollView>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0000b6"
                android:orientation="horizontal" >

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.3"
                    android:background="#cac9c9" >

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#cac9c9"
                        android:gravity="center"
                        android:padding="14dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/loaded_on_shelves_competitor_product"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="#cac9c9" >

                    <CheckBox
                        android:id="@+id/checkBox1"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:background="#cac9c9"
                        android:scrollHorizontally="true" />
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="0.3"
                    android:background="#cac9c9" >

                    <TextView
                        android:id="@+id/TextView05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#cac9c9"
                        android:gravity="center"
                        android:padding="14dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@string/assigned_to_jdi"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.3"
                    android:background="#cac9c9" >

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:background="#cac9c9"
                        android:scrollHorizontally="true" />
                </HorizontalScrollView>
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>