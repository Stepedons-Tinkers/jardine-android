<?xml version="1.0" encoding="UTF-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table_row_item"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeightSmall"
    android:background="#000000" >

    <TextView
        android:id="@+id/crm_no_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="#dcdcdc"
        android:gravity="center"
        android:padding="14dip"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Row 2 column 1"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/workplan_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="#dcdcdc"
        android:gravity="center"
        android:padding="14dip"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Row 2 column 2"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/activity_type_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="#dcdcdc"
        android:gravity="center"
        android:padding="14dip"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Row 2 column 3"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/start_time_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="#dcdcdc"
        android:gravity="center"
        android:padding="14dip"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Row 2 column 4"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/end_time_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="#dcdcdc"
        android:gravity="center"
        android:padding="14dip"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Row 2 column 5"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/assigned_to_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="#dcdcdc"
        android:gravity="center"
        android:padding="14dip"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Row 2 column 6"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/action_edit_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#dcdcdc"
            android:drawableRight="@drawable/vertical_line"
            android:gravity="right"
            android:paddingBottom="14dip"
            android:paddingLeft="14dip"
            android:paddingTop="14dip"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="edit"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/action_delete_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#dcdcdc"
            android:gravity="left"
            android:paddingBottom="14dip"
            android:paddingRight="14dip"
            android:paddingTop="14dip"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="delete"
            android:textColor="#000000" />
    </LinearLayout>

</TableRow>