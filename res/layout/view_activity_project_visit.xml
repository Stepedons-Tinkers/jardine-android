<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/start_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:isScrollContainer="true"
        android:overScrollMode="always"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="none" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:shrinkColumns="*"
            android:stretchColumns="*" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#0000b6"
                    android:gravity="center"
                    android:padding="14dip"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Project Visit"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </TableRow>

            <!-- Row 2 with 2 columns -->

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0000b6"
                android:gravity="center_horizontal" >

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0.3"
                    android:background="#dcdcdc" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:background="#dcdcdc"
                        android:gravity="center"
                        android:padding="14dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="Project Name:"
                        android:textColor="#FF0000"
                        android:textStyle="bold" />
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/project_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0.3"
                    android:background="#dcdcdc"
                    android:ems="10"
                    android:gravity="center"
                    android:maxLines="100"
                    android:scrollHorizontally="true"
                    android:textColor="#000000" />

                <requestFocus />

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="0.3"
                    android:background="#dcdcdc" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:background="#dcdcdc"
                        android:gravity="center"
                        android:padding="14dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="Project Stage:"
                        android:textColor="#FF0000"
                        android:textStyle="bold" />
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/project_stage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="0.3"
                    android:background="#dcdcdc"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="text field"
                    android:maxLines="100"
                    android:scrollHorizontally="true"
                    android:textColor="#000000" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0000b6"
                android:gravity="center_horizontal" >

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.3"
                    android:background="#dcdcdc" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:background="#dcdcdc"
                        android:gravity="center"
                        android:padding="14dip"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="Project Category:"
                        android:textColor="#FF0000"
                        android:textStyle="bold" />
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/project_category"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="0.3"
                    android:background="#dcdcdc"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="text field"
                    android:maxLines="100"
                    android:scrollHorizontally="true"
                    android:textColor="#000000" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="0.3"
                    android:background="#dcdcdc"
                    android:ems="10"
                    android:gravity="center"
                    android:maxLines="100"
                    android:scrollHorizontally="true"
                    android:textColor="#000000" />
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="0.3"
                    android:background="#dcdcdc"
                    android:layout_marginRight="4dp"
                    android:ems="10"
                    android:gravity="center"
                    android:maxLines="100"
                    android:scrollHorizontally="true"
                    android:textColor="#000000" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>