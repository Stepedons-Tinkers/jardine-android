<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:overScrollMode="never"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/collaterals_general_info"
                android:padding="10dp" android:visibility="invisible"
                android:text="@string/collaterals_ep_general_information"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bCustomerAddCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/bCustomerAddCancel"
                android:background="@color/green"
                android:padding="10dp"
                android:text="@string/save" />

            <Button
                android:id="@+id/bCustomerAddCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="#FF00"
                android:padding="10dp"
                android:text="@string/cancel" />
        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/xml_tablelayout_bg"
            android:padding="5dp" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="10dp"
                    android:text="@string/customer_crm_no"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCustomerAddField1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/xml_edittext_bg"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="7dp"
                    android:text="AUTO GENERATED"
                    android:textColor="@color/darkness_blue"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="10dp"
                    android:text="@string/customer_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etCustomerAddField2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/xml_edittext_bg"
                    android:hint="@string/customer_hint_customer_name"
                    android:maxLines="1"
                    android:padding="7dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="10dp"
                    android:text="@string/customer_details_street_address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etCustomerAddField3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/xml_edittext_bg"
                    android:hint="@string/customer_hint_street_address"
                    android:maxLines="1"
                    android:padding="7dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="10dp"
                    android:text="@string/contact_person_details_chain_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etCustomerAddField4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/xml_edittext_bg"
                    android:hint="@string/customer_hint_chain_name"
                    android:maxLines="1"
                    android:padding="7dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="10dp"
                    android:text="@string/customer_details_landline"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etCustomerAddField5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/xml_edittext_bg"
                    android:hint="@string/customer_hint_landline"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:padding="7dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="10dp"
                    android:text="@string/customer_details_customer_size"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spiCustomerAddField6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:dropDownSelector="@color/collaterals_tablerow_trasparent_select"
                    android:spinnerMode="dropdown" >
                </Spinner>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="10dp"
                    android:text="@string/customer_details_customer_type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spiCustomerAddField7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:dropDownSelector="@color/collaterals_tablerow_trasparent_select"
                    android:spinnerMode="dropdown" >
                </Spinner>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="10dp"
                    android:text="@string/customer_business_unit"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spiCustomerAddField8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:dropDownSelector="@color/collaterals_tablerow_trasparent_select"
                    android:spinnerMode="dropdown" >
                </Spinner>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="10dp"
                    android:text="@string/customer_area"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spiCustomerAddField9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:dropDownSelector="@color/collaterals_tablerow_trasparent_select"
                    android:spinnerMode="dropdown" >
                </Spinner>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="10dp"
                    android:text="@string/customer_province"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spiCustomerAddField10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:dropDownSelector="@color/collaterals_tablerow_trasparent_select"
                    android:spinnerMode="dropdown" >
                </Spinner>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="10dp"
                    android:text="@string/customer_city_or_town"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spiCustomerAddField11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:dropDownSelector="@color/collaterals_tablerow_trasparent_select"
                    android:spinnerMode="dropdown" >
                </Spinner>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="10dp"
                    android:text="@string/customer_details_fax"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etCustomerAddField12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/xml_edittext_bg"
                    android:hint="@string/customer_hint_fax"
                    android:maxLines="1"
                    android:padding="7dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="10dp"
                    android:text="@string/assigned_to_contact_person"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCustomerAddField13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/xml_edittext_bg"
                    android:gravity="center"
                    android:hint="@string/customer_hint"
                    android:maxLines="1"
                    android:padding="7dp"
                    android:text=""
                    android:textColor="@color/darkness_blue"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:padding="10dp"
                    android:text="@string/customer_record_status"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_xxlarge"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spiCustomerAddField14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:dropDownSelector="@color/collaterals_tablerow_trasparent_select"
                    android:spinnerMode="dropdown" >
                </Spinner>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>