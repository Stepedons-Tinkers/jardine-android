<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:isScrollContainer="true"
    android:overScrollMode="always"
    android:scrollbarStyle="outsideInset"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000b6"
                android:gravity="center"
                android:maxLines="2"
                android:padding="14dip"
                android:scrollHorizontally="true"
                android:text="@string/general_info"
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.dd.CircularProgressButton
                    android:id="@+id/btnWithText2"
                    android:layout_width="196dp"
                    android:layout_height="64dp"
                    android:layout_margin="4dp"
                    android:layout_toLeftOf="@+id/btnWithText1"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:textComplete="@string/complete_cancel"
                    app:textError="@string/error"
                    app:textIdle="@string/cancel" />

                <com.dd.CircularProgressButton
                    android:id="@+id/btnWithText1"
                    android:layout_width="196dp"
                    android:layout_height="64dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:textComplete="@string/complete"
                    app:textError="@string/error"
                    app:textIdle="@string/save" />
            </RelativeLayout>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="#0000b6"
            android:padding="4dp"
            android:shrinkColumns="*"
            android:stretchColumns="*" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="0.3"
                        android:maxLines="2"
                        android:padding="14dip"
                        android:text="@string/crm_no"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/crm_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        android:focusable="false"
                        android:maxHeight="120dp"
                        android:padding="14dip"
                        android:text="auto generated"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        android:maxLines="2"
                        android:padding="14dip"
                        android:scrollHorizontally="true"
                        android:state_selected="true"
                        android:text="@string/activity_type"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/activity_type"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="0.3"
                        android:scrollHorizontally="true" />

                    <requestFocus />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal" >

                    <HorizontalScrollView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="0.3" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="2"
                            android:padding="14dip"
                            android:scrollHorizontally="true"
                            android:text="@string/check_in"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </HorizontalScrollView>

                    <HorizontalScrollView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3" >

                        <TextView
                            android:id="@+id/check_in"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="2"
                            android:padding="14dip"
                            android:scrollHorizontally="true"
                            android:text="date-time picker"
                            android:textColor="#000"
                            android:textSize="14sp" />
                    </HorizontalScrollView>

                    <HorizontalScrollView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="2"
                            android:padding="14dip"
                            android:scrollHorizontally="true"
                            android:text="@string/check_out"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </HorizontalScrollView>

                    <HorizontalScrollView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.3" >

                        <TextView
                            android:id="@+id/check_out"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:maxLines="2"
                            android:padding="14dip"
                            android:scrollHorizontally="true"
                            android:text="date-time picker"
                            android:textColor="#000"
                            android:textSize="14sp" />
                    </HorizontalScrollView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_horizontal" >

                    <HorizontalScrollView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="0.3" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:maxLines="2"
                            android:padding="14dip"
                            android:scrollHorizontally="true"
                            android:text="@string/business_unit"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </HorizontalScrollView>

                    <EditText
                        android:id="@+id/business_unit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="9dp"
                        android:layout_marginStart="-3dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/edittext_border"
                        android:clickable="false"
                        android:ems="10"
                        android:focusable="false"
                        android:hint="autopopulate"
                        android:inputType="textMultiLine|textImeMultiLine"
                        android:maxHeight="80dp"
                        android:maxLines="100"
                        android:minHeight="50dp"
                        android:padding="2dp"
                        android:scrollHorizontally="true"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:padding="12dip"
                        android:scrollHorizontally="true"
                        android:text="@string/assigned_to"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/created_by"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="-3dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.3"
                        android:background="@drawable/edittext_border"
                        android:clickable="false"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="textfield; auto-populate"
                        android:maxHeight="80dp"
                        android:maxLines="2"
                        android:minHeight="50dp"
                        android:padding="4dp"
                        android:scrollHorizontally="true"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </TableRow>
            </LinearLayout>
        </TableLayout>
    </LinearLayout>

</ScrollView>