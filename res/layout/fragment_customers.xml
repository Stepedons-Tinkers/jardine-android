<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_view_customers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Customers"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/view_customers" />

    <TextView
        android:id="@+id/txt_add_customers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Customers"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/add_customers" />

    <TextView
        android:id="@+id/txt_view_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Contact"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/view_contact" />

    <TextView
        android:id="@+id/txt_add_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Contact"
        android:textSize="16dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/add_contact" />

</LinearLayout>